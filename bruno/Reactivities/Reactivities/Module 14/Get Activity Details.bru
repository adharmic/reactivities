meta {
  name: Get Activity Details
  type: http
  seq: 5
}

get {
  url: {{url}}/api/activities/5a62197b-be97-49f6-acb0-db1135afbe48
  body: none
  auth: inherit
}

script:post-response {
  var data = res.getBody();
  
  // response to be 200
  test("response is created", function() {
      expect(res.getStatus()).to.equal(200)
  });
  
  test("has all properties", function() {
      expect(data).to.have.property('id');
      expect(data).to.have.property('title');
      expect(data).to.have.property('description');
      expect(data).to.have.property('date');
      expect(data).to.have.property('city');
      expect(data).to.have.property('venue');
      expect(data).to.have.property('attendees');
  });
}

settings {
  encodeUrl: true
}
